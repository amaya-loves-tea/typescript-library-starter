{
  "name": "typescript-library-starter",
  "version": "0.0.0",
  "description": "Typescript library starter boilerplate",
  "main": "dist/index.js",
  "repository": "https://github.com/amaya-loves-tea/typescript-library-starter.git",
  "author": "amaya-loves-tea",
  "license": "MIT",
  "private": false,
  "scripts": {
    "style": "run-s style:*",
    "style:format": "prettier --write \"src/**/*.ts\"",
    "style:lint": "eslint src --ext .js,.ts --fix",
    "commit": "git-cz",
    "clean": "rimraf dist",
    "build": "run-s clean && run-p build:*",
    "build:main": "tsc -p tsconfig.json",
    "build:module": "tsc -p tsconfig.module.json",
    "test": "jest --config jestconfig.json --coverage",
    "test:watch": "jest --config jestconfig.json --watch",
    "cov": "run-s test && run-s cov:open",
    "cov:open": "open-cli coverage/lcov-report/index.html",
    "cov:publish": "codecov",
    "doc": "typedoc src && run-s doc:open",
    "doc:open": "open-cli docs/index.html",
    "doc:publish": "gh-pages -d docs"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@types/jest": "^24.0.15",
    "@types/node": "^12.0.12",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "codecov": "^3.5.0",
    "commitizen": "^3.1.1",
    "cz-conventional-changelog": "2.1.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "gh-pages": "^2.0.1",
    "husky": "^3.0.0",
    "jest": "^24.8.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^5.0.0",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.5.2"
  }
}
